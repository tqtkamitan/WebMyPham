
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto">
    <div class="card text-center" style="margin-top:150px">
        <div class="card-header text-white bg-primary">
            <h3>Đăng ký</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.Noti != null)
            {
                @Html.Raw(ViewBag.Noti)
            }
            <form action="~/User/Register" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group col-md-6 row">
                        <label for="userName" class="col-md-4 col-form-label">Name:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="userName" name="name" placeholder="You user name here..">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="phoneNumber" class="col-md-4 col-form-label">Phone Number:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="09999..">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="address" class="col-md-4 col-form-label">Address:</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="address" id="address" placeholder="Your address..">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="staticEmail" class="col-md-4 col-form-label">Email:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="email" id="staticEmail" placeholder="email@example.com">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="inputPassword" class="col-md-4 col-form-label">Password:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="inputPassword" class="col-md-4 col-form-label">Nhập lại Password:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="password" class="form-control" name="password2" id="inputPassword" placeholder="Please input your Password again">
                        </div>
                    </div>
                </div>
                <div class="form-group text-muted">
                    <input class="btn btn-primary border-1 border-dark" style="width:120px" type="submit" value="Đăng ký" />
                    <a type="button" style="width:120px" class="btn btn-info" href="~/User/Login">Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>



