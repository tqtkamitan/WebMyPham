
@{
    ViewBag.Title = "EditUserInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto">
    <div class="card text-center" style="margin-top:150px">
        <div class="card-header text-white bg-primary">
            <h3>Chỉnh sửa thông tin của bạn</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.Noti != null)
            {
                @Html.Raw(ViewBag.Noti)
            }
            <form action="~/User/Register" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group col-md-12">
                        <img style="width:200px; height:200px" src="@ViewBag.User.img" />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="userName" class="col-md-4 col-form-label">Hình đại diện:<label style="color:red">*</label></label>
                        <div class="col-md-12">
                            <input type="file" class="form-control" id="userName" name="img">
                            <small>Không thay đổi là giữ ảnh cũ</small>
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="userName" class="col-md-4 col-form-label">Name:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@ViewBag.User.name" id="userName" name="name" placeholder="You user name here..">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="phoneNumber" class="col-md-4 col-form-label">Phone Number:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="@ViewBag.User.phoneNumber" name="phoneNumber" id="phoneNumber" placeholder="09999..">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="address" class="col-md-4 col-form-label">Address:</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="address" value="@ViewBag.User.address" id="address" placeholder="Your address..">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="staticEmail" class="col-md-4 col-form-label">Email:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="email" disabled value="@ViewBag.User.email" id="staticEmail" placeholder="email@example.com">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="inputPassword" class="col-md-4 col-form-label">Password:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="password" class="form-control" value="@ViewBag.User.password" name="password" id="inputPassword" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label for="inputPassword" class="col-md-4 col-form-label">Nhập lại Password:<label style="color:red">*</label></label>
                        <div class="col-md-8">
                            <input type="password" class="form-control" value="@ViewBag.User.password" name="password2" id="inputPassword" placeholder="Please input your Password again">
                        </div>
                    </div>
                </div>
                <div class="form-group text-muted">
                    <input class="btn btn-primary border-1 border-dark" style="width:120px" type="submit" value="Thay đổi" />
                </div>
            </form>
        </div>
    </div>
</div>



