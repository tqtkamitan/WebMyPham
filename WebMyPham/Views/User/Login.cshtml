
@{
    ViewBag.Title = "Login";
}

<div class="container mx-auto w-50">
    <div class="card text-center" style="margin-top:150px">
        <div class="card-header text-white bg-primary">
            <h3>Đăng nhập</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.Noti != null)
            {
                @Html.Raw(ViewBag.Noti)
            }
            <form>
                <div class="form-group row">
                    <label for="staticEmail" class="col-md-3 col-form-label">User:</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="email" id="staticEmail" placeholder="email@example.com">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-md-3 col-form-label">Password:</label>
                    <div class="col-md-8">
                        <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password">
                    </div>
                </div>
                <div class="form-group text-muted">
                    <input class="btn btn-primary border-1 border-dark" style="width:120px" type="submit" value="Đăng nhập" />
                    <a type="button" style="width:120px" class="btn btn-info" href="~/User/Register">Đăng ký</a>
                </div>
            </form>
        </div>
    </div>
</div>

